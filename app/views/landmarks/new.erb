<h1>New Landmark</h1>

<form action="/landmarks" method="post">
    <h3>Name</h3>

    <input type="text" name="landmark[name]" id="landmark_name"><br>

    <h3>Year Completed</h3>

    <input type="text" name="landmark[year_completed]" id="landmark_year_completed"><br>

    <h3>Associated Figure</h3>

    <% Figure.all.each do |figure| %>
    <input type="radio" name="landmark[figure_id]" value="<%=figure.id%>" id="checkbox_<%=figure.id%>"><%=figure.name%><br>
    <% end %>

    <input type="text" name="figure[name]"><br>
    <input type="submit" value="Create New Landmark">
</form>
